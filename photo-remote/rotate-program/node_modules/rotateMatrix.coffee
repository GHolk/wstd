
matrix = require 'matrix'

{sin,cos} = Math

# define omega, phi, kappa rotate matrix.
rotateMatrix =
    omega: (w) -> matrix.createFromArray2D [
        [1, 0, 0]
        [0, cos(w), sin(w)]
        [0, -sin(w), cos(w)]
    ]
    phi: (f) -> matrix.createFromArray2D [
        [cos(f), 0, -sin(f)]
        [0, 1, 0]
        [sin(f), 0, cos(f)]
    ]
    kappa: (k) -> matrix.createFromArray2D [
        [cos(k), sin(k), 0]
        [-sin(k), cos(k), 0]
        [0, 0, 1]
    ]
    wfk: (w,f,k) ->
        @kappa k
            .multiply @phi f
            .multiply @omega w

module.exports = rotateMatrix

